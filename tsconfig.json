{
  "compilerOptions": {
    "incremental": false,
    "target": "es2022",
    "jsx": "preserve",
    "lib": ["DOM", "ESNext"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "~/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "types": ["vite/client", "unplugin-icons/types/vue", "./src/reddit/reddit-types.ts"],
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "plugins": [{ "name": "@vue/typescript-plugin" }]
  },
  "exclude": ["dist", "node_modules"]
}
